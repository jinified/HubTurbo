<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<fx:root type="BorderPane" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <right>
      <VBox fx:id="sideBar" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <center>
      <VBox fx:id="mainContent" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Label fx:id="promptLabel" text="Create New Issue">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="issueTitle" />
            <TextArea fx:id="issueBody" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
            <HBox fx:id="footer" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <HBox fx:id="fillSpacePane" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="confirmBtn" mnemonicParsing="false" text="Confirm" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</fx:root>
